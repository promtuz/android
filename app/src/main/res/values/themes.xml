<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/ic_launcher_background</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/Theme.Promtuz</item>
    </style>

    <style name="Theme.Promtuz" parent="Theme.Material3.DynamicColors.DayNight.NoActionBar">
        <!-- <item name="android:isLightTheme">false</item> -->
        <!--        <item name="android:windowSplashScreenBackground">@color/ic_launcher_background</item>-->
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/ic_launcher_foreground</item>

    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="enableEdgeToEdge">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>:
        <item name="shapeAppearanceLargeComponent">@style/BottomSheetShapeAppearance</item>
    </style>

    <style name="BottomSheetShapeAppearance" parent="ShapeAppearance.MaterialComponents.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>
</resources>